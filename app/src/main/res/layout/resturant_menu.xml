<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@color/white">


    <View
        android:id="@+id/vSep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke_light_grey_alpha" />


    <ImageView
        android:id="@+id/imageViewRestaurantImage"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_fresh_item_placeholder"
        android:tag="mwar"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textViewRestaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewRestaurantImage"
        android:layout_marginStart="15dp"
        android:text="Title"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        android:layout_marginTop="2dp"
        android:typeface="monospace"
        />

    <View
        android:id="@+id/view_review_shadow"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/imageViewRestaurantImage"
        android:layout_alignBottom="@id/imageViewRestaurantImage"
        android:background="@drawable/shadow_up_fresh_home_item" />

    <TextView
        android:id="@+id/textViewDelivery"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="10-20"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/shadow_up_fresh_home_item"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewRestaurantName">
    <TextView
        android:id="@+id/tvReviewCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_star_yellow_10"
        android:layout_below="@+id/textViewRestaurantName"
        android:text="3.5"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:typeface="monospace" />


    <TextView
        android:id="@+id/textViewRestaurantCusines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvReviewCount"
        android:layout_below="@+id/textViewRestaurantName"
        android:text="Title"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_color_light_less"
        android:textSize="14sp"
        android:typeface="monospace"
        android:singleLine="true"/>


    <TextView
        android:id="@+id/textViewRestaurantCloseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/textViewRestaurantCusines"
        android:drawableStart="@drawable/ic_exclamation_red"
        android:drawablePadding="3dp"
        android:maxLines="1"
        android:text="Closing in 15 minute"
        android:textColor="@color/red_dark_more"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"
        android:typeface="monospace"/>
    </RelativeLayout>


</RelativeLayout>